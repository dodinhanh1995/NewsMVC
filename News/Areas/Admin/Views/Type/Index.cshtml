@model IEnumerable<News.Areas.Admin.Models.EF.loaitin>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



@section Title {Danh sách Loại tin}

<p>
    <a href="@Url.Action("Create", "Type")" class="btn btn-default">
        <i class="fa fa-plus"></i> Thêm mới
    </a>
</p>


<table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idLT)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ten)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ten_KhongDau)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ThuTu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnHien)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.theloai.TenTL)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.idLT)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ten)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ten_KhongDau)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ThuTu)
                </td>
                <td>
                    @(item.AnHien == 1 ? "Active" : "Block")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.theloai.TenTL)
                </td>
                <td>
                    <a href="@Url.Action("Edit", "Type", new { id = item.idLT })" class="btn btn-primary">
                        <i class="fa fa-edit"></i>
                    </a>
                    <a href="@Url.Action("Delete", "Type", new { id = item.idLT })" onclick="return confirm('Bạn có chắc là muốn xóa không?')" class="btn btn-danger">
                        <i class="fa fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>