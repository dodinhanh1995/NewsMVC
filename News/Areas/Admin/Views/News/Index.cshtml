@model IEnumerable<News.Areas.Admin.Models.EF.tin>

@{
    ViewBag.Title = "Danh sách bài viết";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@section Title {Danh sách Bài viết}

<p>
    <a href="@Url.Action("Create", "News")" class="btn btn-default">
        <i class="fa fa-plus"></i> Thêm mới
    </a>
</p>


<table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idTin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.theloai.TenTL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.loaitin.Ten)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TieuDe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.urlHinh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ngay)
            </th>
            <th>Tác giả</th>
            <th>
                @Html.DisplayNameFor(model => model.TomTat)
            </th>
           <th>
                @Html.DisplayNameFor(model => model.SoLanXem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnHien)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.idTin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.theloai.TenTL)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.loaitin.Ten)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TieuDe)
                </td>
                <td>
                    <img src="~/Assets/upload/tintuc/@item.urlHinh" width="100" height="70" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ngay)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.user.HoTen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TomTat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoLanXem)
                </td>
               
                <td>
                    @(item.AnHien == 1 ? "Active" : "Block")
                </td>
                <td>
                    <a href="@Url.Action("Edit", "News", new { id = item.idTin })" class="btn btn-primary">
                        <i class="fa fa-edit"></i>
                    </a>
                    <a href="@Url.Action("Delete", "News", new { id = item.idTin })" onclick="return confirm('Bạn có chắc là muốn xóa không?')" class="btn btn-danger">
                        <i class="fa fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>